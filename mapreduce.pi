    q!nil
  else
    ( new h:^(List [String V]) new t:^(List [String V]) new a:^(List [String V])
      ( f![(car xs) (rchan h)]
      | flatMapFromIS![#V (cdr xs) f (rchan t)]
      | h?hs:(List [String V]) = t?ts:(List [String V]) =
          appendPairsS![#V hs ts (rchan a)]
      | a?res:(List [String V]) = q!res ) )

