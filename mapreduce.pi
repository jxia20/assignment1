def clampNonNeg [x:Int q:/Int] =
  ( new le0:^Bool
    ( <=![x 0 (rchan le0)]
    | le0?yes:Bool = if yes then q!0 else q!x ) )

def min2 [a:Int b:Int q:/Int] =
  ( new le:^Bool
    ( <=![a b (rchan le)]
    | le?ok:Bool = if ok then q!a else q!b ) )

def sub [s:String start:Int len:Int q:/String] =
  ( new L:^Int
    ( string.size![s (rchan L)]
    | L?n:Int =
        ( new s0:^Int new l0:^Int
          ( clampNonNeg![start (rchan s0)]
          | clampNonNeg![len   (rchan l0)]
          | s0?st:Int = l0?ln:Int =
              ( new tooFar:^Bool
                ( <=![n st (rchan tooFar)]           {- n <= st ? (start >= size) -}
                | tooFar?out:Bool =
                    if out then
                      q!""                              {- past end ⇒ empty -}
                    else
                      ( new maxLen:^Int
                        ( -![n st (rchan maxLen)]       {- max allowed len = n - st -}
                        | maxLen?ml:Int =
                            ( new useLen:^Int
                              ( min2![ln ml (rchan useLen)]
                              | useLen?k:Int =
                                  string.sub![s st k (rchan q)] ) ) ) ) ) ) ) ) ) )

def strlen [s:String q:/Int] =
  string.size![s (rchan q)]
  
{- append helper function. combines two lists -}
def append [#X xs:(List X) ys:(List X) q:/(List X)] =
  if (null xs) then
    q!ys
  else
    ( new k:^(List X)
      ( append![#X (cdr xs) ys (rchan k)]
      | k?zs:(List X) = q!(cons (car xs) zs) ))

{- appendPairs: ∀T. append (List [Int T]) ++ (List [Int T]) -}
def appendPairs [#T xs:(List [Int T]) ys:(List [Int T]) q:/(List [Int T])] =
  if (null xs) then
    q!ys
  else
    ( new k:^(List [Int T])
      ( appendPairs![#T (cdr xs) ys (rchan k)]
      | k?zs:(List [Int T]) = q!(cons (car xs) zs) ))

